                                    <span class="colors-ui-span-check">سبز</span>
                                </label>
                            </li>
                        </ul>

                    </div>
                    <div class="product-short-descrip">
                        <h2>توضیح کوتاه</h2>
                        <p>@Html.Raw(Model.ProductDescription)</p>
                        <a class="btn-descrip" href="">دیدن مشخصات</a>
                    </div>
                    <div class="tags">
                        <div class="prouduct-tag-heading">
                            <span class="ss">کلمات کلیدی</span>
                        </div>
                        @if (Model.Tags != null)
                        {
                            <div class="tag-buttons">
                                @foreach (string tag in Model.Tags.Split('-', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <a href="/Products?filter=@tag" class="tag">@tag</a>
                                }

                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="product-summary">
                <div class="box">
                    <div class="box-cc">
                        <div class="box-wrapper">
                            <div class="group-links">
                                <div class="product-group-name">
                                    <h3>asdasdasd</h3>
                                    <span class="group-name">از : @ViewBag.subgroup </span>
                                </div>
                            </div>
                            <div class="group-links">
                                <div class="send">
