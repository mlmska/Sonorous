@page
@using sonorous.Core.Convertors;
@model sonorous.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست نقس ها";
}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست نقس ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست نقس ها
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            
                            <div class="col-md-12" style="margin:10px 0;">
                                <a asp-page="CreateRole" class="btn btn-outline btn-success">افزودن نقش جدید</a>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                 <tr>
                                     <th>نام نقش </th>
                                     <th>دستورات</th>
                                 </tr>
                                </thead>
                                <tbody>
                                   @foreach(var role in Model.listroles)
                                   {
                                       <tr>
                                           <td>@role.Roletitle</td>
                                           <td>
                                               <a href="/Admin/Roles/EditRole/@role.RoleID" class="btn btn-warning">ویرایش</a>
                                               <a href="/Admin/Roles/DeleteRole/@role.RoleID" class="btn btn-danger">حذف</a>

                                           </td>
                                       </tr>
                                   }
                                </tbody>
                            </table>
                           
                        </div>
                    </div>     
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>