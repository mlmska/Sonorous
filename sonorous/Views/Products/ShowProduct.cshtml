                                </div>
                            </div>
                            <div class="product-price">
                                <div class="price-real">
                                    <div class="price-value">@Model.ProductPrice.ToString("#,0")</div>
                                    تومان
                                </div>
                            </div>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="group-button  ssa">
                                <a href="/Products/BuyProducts/@Model.ProductID" class="btn btn-buy">خرید</a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                برای خرید لطفا به حساب خود ورود کنید
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>

    </section>

</div>
