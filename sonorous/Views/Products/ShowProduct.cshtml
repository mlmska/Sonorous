                                </div>
                            </div>
                            <div class="link-product">
                                <div class="product-available">
                                    <span>
                                        @if (Model.ProductStatus.StatusTilte == "موجود")
                                        {
                                            @Model.ProductStatus.StatusTilte
                                            <i class="fas fa-check"></i>
                                        }
                                        else
                                        {
                                            @Model.ProductStatus.StatusTilte
                                            <i class="fas fa-times-circle"></i>
                                        }

                                    </span>
                                </div>
                                <div class="product-available">
