                                <label class="colors-ui-label">
                                    <span class="colors-ui-span"></span>
                                    <input type="radio" class="colors-ui-selector">
                                    <span class="colors-ui-span-check">سبز</span>
                                </label>
                            </li>
                            <li class="colors-ui">
