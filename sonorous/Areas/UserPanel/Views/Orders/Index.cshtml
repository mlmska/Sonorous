@model IEnumerable<sonorous.Datalayer.Entites.Order.Order>
@using sonorous.Core.Convertors;
@{
    ViewData["Title"] = "Index";
    
}

    <main>
        <div class="container">
            <div class="user-account">
                <div class="row">
                    <partial name="_Sidebars" />
                    <div class="col-md-9 col-sm-8 col-xs-12">
                        <section class="user-account-content">
                            <header>
                                <h1> سفارش های  شما </h1>
                            </header>
                           
                            <table class="table table-bordered text-danger">
                                <thead>
                                    <tr>
                                        <th>شماره سفارش</th>
                                        <th>تاریخ</th>
                                        <th>جمع</th>
                                        <th>پرداخت</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                              @item.OrderID
                                            </td>
                                            <td>@item.Createdate.toshamsi()</td>
                                            <td>@item.OrderSum.ToString("#,0")</td>
                                            <td>
                                                @if (item.isFinaly)
                                                {
                                                    <p class="text-success">
                                                       پرداخت شده
                                                    </p>
                                                }
                                                else
                                                {
                                            <p class="text-danger">
                                                پردهخت نشده
                                            </p>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-info" href="/UserPanel/Orders/ShowOrder/@item.OrderID">نمایش</a>
                                            </td>
                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>

                        </section>

                    </div>

                </div>

            </div>

        </div>

    </main>
